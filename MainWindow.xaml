<Window x:Name="Window" x:Class="Invoice_Free.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invoice_Free"
        mc:Ignorable="d"
        Title="MainWindow" d:Width="1280" d:Height="1080" Height="auto" Width="auto" ResizeMode="NoResize" WindowState="Maximized" SizeToContent="Manual">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="405*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Source="/Assets/logo.png" Margin="0,5,0,10"/>
        <Menu Grid.Row="2" Width="auto"/>



    </Grid>

</Window>
